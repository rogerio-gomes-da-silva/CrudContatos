@model ContatoModel
@{
    ViewData["Title"] = "Editar contato";
}

<div class="text-center">

    <h1 class="display-4 text-center">Editar contato</h1>

</div>

<form asp-controller ="Contato" asp-action="Editar" method="post">

    <div class="form-group">
        <label for="Nome">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome do contato">
    </div>

    <div class="form-group">
        <label for="Email">E-mail</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Digite o email do contato">
    </div>

    <div class="form-group">
        <label for="Celular">Numero de telefone</label>
        <input type="text" asp-for="Celular" class="form-control" placeholder="Digite o numero de telefone do contato">
    </div>
    <br />
    <button type="submit" class="btn btn-outline-primary">Editar</button>
    <a class="btn btn-outline-secondary" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
</form>