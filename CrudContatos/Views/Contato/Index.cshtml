@model List<ContatoModel>
@{
    ViewData["Title"] = "Lista de contatos";
}

<div class="text-center">
    <br />
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-info" role="button" asp-controller="Contato" asp-action="Criar" >Adicionar contato</a>
    </div>
    <br />

    @if(TempData["MensagemSucesso"] != null)
    {
     <div class="alert alert-success" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close" >X</button>
        @TempData["MensagemSucesso"]
     </div>
    }
    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
            @TempData["MensagemErro"]
        </div>
    }

    <br />

<h1 class="display-4 text-center">Lista de contatos</h1>

<table class="table table-striped" id="table-contatos">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Nome</th>
            <th scope="col">E-mail</th>
            <th scope="col">Celular</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
       @if(Model != null && Model.Any())
       {
           foreach (ContatoModel contato in Model)
           {
                    <tr>
                        <th scope="row">@contato.Id</th>
                        <td>@contato.Nome</td>
                        <td>@contato.Email</td>
                        <td>@contato.Celular</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-outline-primary" asp-route-id="@contato.Id" asp-controller="Contato" asp-action="Editar">Editar</a>
                                <a role="button" class="btn btn-outline-danger" asp-route-id="@contato.Id" asp-controller="Contato" asp-action="ApagarConfirmacao">Excluir</a>
                            </div>
                        </td>
                    </tr>
           }
       }
    </tbody>
</table>
</div>